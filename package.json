{
  "name": "zmk-tools",
  "displayName": "ZMK Tools",
  "description": "Tools for working with ZMK Firmware",
  "version": "1.1.0",
  "publisher": "spadin",
  "license": "MIT",
  "author": {
    "name": "Joel Spadin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelspadin/zmk-tools.git"
  },
  "icon": "images/zmk_logo.png",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dts",
    "onLanguage:zmk-keymap",
    "onCommand:zmk.addKeyboard"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zmk-keymap",
        "aliases": [
          "ZMK Keymap"
        ],
        "extensions": [
          ".keymap"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "dts",
        "extensions": [
          ".overlay"
        ]
      }
    ],
    "grammars": [
      {
        "language": "zmk-keymap",
        "scopeName": "source.dts",
        "path": "./syntaxes/dts.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "ZMK Tools",
      "properties": {
        "zmk.configPath": {
          "type": "string",
          "description": "Workspace-relative path to the folder containing ZMK config files",
          "scope": "resource"
        },
        "zmk.buildMatrixPath": {
          "type": "string",
          "description": "Workspace-relative path to the build matrix file",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "zmk.addKeyboard",
        "category": "ZMK",
        "title": "Add Keyboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build-wasm": "tree-sitter build-wasm node_modules/tree-sitter-devicetree",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.77.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vscode/test-web": "^0.0.41",
    "assert": "^2.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "process": "^0.11.10",
    "tree-sitter-cli": "^0.20.7",
    "tree-sitter-devicetree": "^0.5.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "yaml-loader": "^0.8.0"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "eslint-config": "^0.3.0",
    "markdown-escape": "^2.0.0",
    "web-tree-sitter": "^0.20.7",
    "yaml": "^2.2.1"
  }
}
